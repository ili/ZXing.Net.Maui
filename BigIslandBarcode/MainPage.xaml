<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:zxing="clr-namespace:ZXing.Net.Maui.Controls;assembly=ZXing.Net.MAUI"
    xmlns:local="clr-namespace:BigIslandBarcode"
	x:Class="BigIslandBarcode.MainPage"
	BackgroundColor="#000000"
    Title="Foo">

	<FlyoutPage.Flyout>
		<local:ScannerPage />

	</FlyoutPage.Flyout>

	<FlyoutPage.Detail>
		<NavigationPage>
			<x:Arguments>
				<TabbedPage BackgroundColor="#000000">
					<local:ScannerPage />
					<local:InfoPage />
				</TabbedPage>
			</x:Arguments>
		</NavigationPage>
	</FlyoutPage.Detail>
</FlyoutPage>
